[function f_monster_speak]
local.t=<monster_type>
say @<def0.monster_speech_<local.t>_color> <args>
args=<explode " ",<args>>
local.s=<args>
local.ms=" "
for n 0 <eval (<argv>-1)>
  args=<local.s>
  for x 0 <eval ((strlen(<argv[<dlocal.n>]>)-1)/2)>	//amount of letters in word
    args=<def0.monster_speech_<local.t>_syllables>
    local.ms .= <argv[<R<argv>>]>
  endfor 
  local.ms .= " "
endfor
say @<def0.monster_speech_<local.t>_color> <local.ms>
bark 1

