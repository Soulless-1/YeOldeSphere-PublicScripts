[events e_monster_speech]

on=@gethit
if !(<R0,9>)
  dorand 5
    local.s=Ouch!
    local.s=Me not hurt bad!
    local.s=Thou fight bad.
    local.s=Thy blows soft!
    local.s=You bad with weapon!
  enddo
  f_monster_speak <local.s>
endif


